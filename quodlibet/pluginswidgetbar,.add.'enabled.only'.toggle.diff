             if p.id in sort_order:
                 plugins_map_first[p.id] = p
             else:
@@ -536,4 +555,19 @@ class PluginsWidgetBarPlugin(UserInterfacePlugin, EventPlugin):
             filter_box.pack_start(filter_entry, True, True, 0)
